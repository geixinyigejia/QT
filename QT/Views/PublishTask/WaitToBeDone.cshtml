@model IEnumerable<GetLBAMVC.Models.PublishTasks>

@using PagedList;
@using PagedList.Mvc;

<h3>等待完成的任务</h3>

<div class="table-responsive" style="margin-top:35px;margin-left:35px">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th style="display:none;">
                    @Html.DisplayNameFor(model => model.PublishTaskID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceiverName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.city)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.links)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.wangwangxiaohao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaskPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.charges)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaskType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShuadanType)
                </th>   
                <th>
                    @Html.DisplayNameFor(model => model.payment)
                </th>             
                <th>任务操作</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td style="display:none;">
                    @Html.DisplayFor(modelItem => item.PublishTaskID)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ReceiverName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.links)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.wangwangxiaohao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.charges)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShuadanType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.payment)
                </td>
                <td>
                    @Html.ActionLink("确认", "ConfrimCompleteTask", new { publishTaskID = item.PublishTaskID })
                   
                </td>
            </tr>
        }

    </table>
</div>

<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    var data = Model as IPagedList<GetLBAMVC.Models.PublishTasks>;
}
<div style="margin-left:35px;">
    @Html.PagedListPager(list: data,
                generatePageUrl: page => Url.Action("WaitToBeDone", new { p = page }))
</div>